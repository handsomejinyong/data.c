#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<stdlib.h>

typedef int element;

typedef struct ListNode {
	element data;
	struct ListNode* link;
}ListNode;

void error(char* msg)
{
	fprintf(stderr, "%s\n", msg);
	exit(1);
}

ListNode* insert_number(ListNode* head, element value)
{
	ListNode* p = (ListNode*)malloc(sizeof(ListNode));
	p->data = value;
	p->link = head;
	head = p;
	return head;
}

void print_list(ListNode* head)
{
	for (ListNode* p = head; p != NULL; p = p->link)
		printf("%d ", p->data);
	printf("NULL \n");
}
ListNode* reverse(ListNode* head)
{
	ListNode* p, * q, * r;
	p = head;
	q = NULL;
	while (p != NULL) {
		r = q;
		q = p;
		p = p->link;
		q->link = r;
	}
	return q;
}

int main(void)
{
	ListNode* head = NULL;

	printf("리스트 생성. \n");
	head = insert_number(head, 10);
	head = insert_number(head, 20);
	head = insert_number(head, 30);
	print_list(head);

	printf("역순 변환 후 \n");
	head = reverse(head);
	print_list(head);

	return 0;
}
